<style>

    a {
        color: #C8472C !important;
    }

    .first-section {
        margin-top: 5rem !important;
    }

    .slide-section {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .slide-section-text {
        width: 100%;
        margin-bottom: 1rem !important;
    }

    .slide-section-title {
