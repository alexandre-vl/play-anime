    }
    .splide_slide_img {
        height: 300px;
        width: 200px;
        border-radius: 10px;
    }

    .splide__slide {
        transition: all 0.3s ease-in-out;
        border-radius: 10px !important;
        position: relative;
        color: #C8472C !important;
        display: flex;
        flex-direction: column;
    }

    .splide__list {
        border-radius: 10px !important;
    }

    .splide__slide:hover {
        opacity: 90%;
    }

    .splide__slide:hover {
        color: #326bac !important;
    }

    .slide-brand-type {
        position: absolute;
        top: 10px;
        right: calc(50% - 80px);
        z-index: 99;
        color: #ffffff !important;
        background-color: rgba(0, 0, 0, 0.69);
        border-radius: 5px;
        font-size: 12px;
        padding: 2px 5px;
    }

    .splide__arrow--prev {
        left: -3rem !important;
    }
    .splide__arrow--next {
        right: -3rem !important;
    }

    .splide__pagination {
        bottom: inherit !important;
    }

    @media screen and (max-width: 1330px) {
        .splide {
            width: 100% !important;
            padding: 0 20px;
        }
    }

    @media screen and (max-width: 1130px) {
        .slide-brand-type {
            left: 20px;
            right: auto;
        }
    }
</style>
