<%- include('partials/header') -%>
<%- include('partials/navbar') -%>

<section class="first-section slide-section">
    <div class="splide" id="trends">
        <div class="slide-section-text">
            <a class="slide-section-title" href="/">üèÜ Popular</a>
        </div>
        <div class="splide__track">
            <ul class="splide__list">
                <% data.trend.forEach((item) => { %>
                <div class="splide__slide" style="position: relative">
                    <a class="slide-brand-type" href="/<%=item.type[0]==="Serie"?"series":"movies"%>"><%=item.type[0].toUpperCase()%></a>
                    <a href="/anime/?name=<%=item.name%>">
                        <img src="<%=item.img%>" alt="Image" class="splide_slide_img" loading="lazy">
                        <p><%=item.name%></p>
                    </a>
                </div>

                <%})%>
            </ul>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const slider = new Splide('#trends', {
                    type: 'loop',
                    perPage: 5.5,
                    perMove: 1,
                    autoplay: true,
                    autoplaySpeed: 3000,
                    responsive: true,
                    speed: 1000,
                    drag: true,
                    swipe: true,
                    touch: true,
                    keyboard: true,
                    rewind : true,
                    scrollbar: true,
                    scrollbarType: 'slide',
                    breakpoints: {
                        640: {
                            perPage: 1.6,

                        },
                        768: {
                            perPage: 2,

                        },
                        1024: {
                            perPage: 3,

                        },
                        1440: {
                            perPage: 5,

                        },
                    },
                }).mount();
            });
        </script>
    </div>
</section>

