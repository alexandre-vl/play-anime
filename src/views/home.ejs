<%- include('partials/header') -%>
<%- include('partials/navbar') -%>

<section class="first-section slide-section">
    <div class="splide" id="trends">
        <div class="slide-section-text">
            <p class="slide-section-title">üèÜ Popular</p>
        </div>
        <div class="splide__track">
            <ul class="splide__list">
                <% data.trend.forEach((item) => { %>
                <li class="splide__slide"><img src="<%=item.img%>" alt="Image" class="splide_slide_img"></li>
                <%})%>
            </ul>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const slider = new Splide('#trends', {
                    type: 'loop',
                    perPage: 5.5,
                    perMove: 1,
                    responsive: true,
                    speed: 1000,
                    drag: true,
                    swipe: true,
                    touch: true,
                    keyboard: true,
                    rewind : true,
                    scrollbar: true,
                    scrollbarType: 'slide',
                }).mount();
            });
        </script>
    </div>
</section>

