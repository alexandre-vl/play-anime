        background-color: #252525;
    }

    .server-title {
        font-size: 20px;
        font-weight: bold;
        color: #2f2f2f;
    }

    .delete-button {
        background-color: #e84545;
    }

    .cancel-button svg {
        color: #8e8e8e !important;
    }

    .confirm-button {
        background-color: #e84545;
    }

    .cancel-button, .confirm-button {
