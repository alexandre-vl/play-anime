
<div class="card-server card-<%=movie.id%>">
    <div class="card-server-image" style="background-image: url(<%=movie.img%>)" loading="lazy">
        <figure class="image-container is-4by3" style=" backdrop-filter: blur(5px); display: flex; flex-direction: column; justify-content: center; align-items: center">
        </figure>
    </div>
    <div class="card-server-content" style="height:50%; display: flex !important; flex-direction: column; justify-content: space-between">
        <div class="media">
            <div class="media-content">
                <p class="server-title is-4"><%= movie.name%></p>
            </div>
        </div>

        <div class="is-flex" style="display: flex; flex-direction: row; justify-content: center; align-items: center; gap: 50px">
            <button class="button is-light">Settings</button>
            <div class="confirm-buttons">
                <button class="button cancel-button cancel-case-<%=movie.id%>" onclick="cancelButton('<%=movie.id%>')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </button>
                <button class="button confirm-button confirm-case-<%=movie.id%>" onclick="confirmButton('<%=movie.id%>', `<%=movie.name%>`)">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </button>
            </div>

            <button class="button delete-button delete-case-<%=movie.id%>" onclick="deleteButton('<%=movie.id%>')">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
            </button>
        </div>
    </div>
</div>

