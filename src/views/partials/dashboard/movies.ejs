        background-position: center;
        background-size: 125%;
        background-color: #252525;
        height: 50%;
    }

    .card-server-image, .card-server-image figure {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-server-image figure {
        height: 100%;
    }

    .image-container img {
        width: 80px;
